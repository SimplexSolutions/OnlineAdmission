@model IEnumerable<IdentityRole>
@{ 
    ViewBag.Title = "All Roles";
} 

<h2>All Roles</h2>
<hr />
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-controller="Administrations" asp-route-id="@role.Id" class="btn btn-primary" >Edit</a>
                <a asp-action="Delete" asp-controller="Administrations" class="btn btn-danger" >Delete</a>
            </div>
        </div>
    }
}
else
{
	<div class="card">
        <div class="card-body">
            <h4 class="card-title">No Roles Created yet</h4>
            <a asp-action="CreateRole" asp-controller="Administrations" class="btn btn-info">Crate Role</a>
        </div>
    </div>
}