@model IEnumerable<IdentityUser>

@{ 
    ViewBag.Title = "Application User List";
    int sl = 0;
}

@if (Model.Any())
{
	<caption>List of all User</caption>
	<table class="table" >
		
		<thead>
			<tr>
				<th>#</th>
				<th>Id</th>
				<th>User Name</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
            {
				<tr>
					<td>@(++sl)</td>
					<td>@user.Id</td>
					<td>@user.UserName</td>
					<td>
                        <a asp-action="Delete" asp-controller="Administrations" class="btn btn-danger" asp-route-id="@user.Id">Delete</a>
					</td>
				</tr>
            }
		</tbody>
	</table>
}
else
	{
		<div class="jumbotron">
			<h4>Not any user created yet</h4>
		</div>	
	}

@section Scripts{ 
	<script>
		$(document).ready(function () {
			let success = '@ViewBag.success';
			let error = '@ViewBag.error';
			let warning = '@ViewBag.warning';

            if (success !== '') {
                alertify.success(success);
            }
            if (error !== '') {
                alertify.error(error);
            }
            if (warning !== '') {
                alertify.warning(warning);
            }
            
        });
	</script>
}