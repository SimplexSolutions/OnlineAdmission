@model OnlineAdmission.APP.ViewModels.SpecialOffer.SpecialOfferVM

<div class="col-md-10 offset-md-1">
    <form asp-action="Edit" asp-controller="SpecialOffer" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="id" value="@Model.MeritStudent.Id" />
        <input type="hidden" asp-for="MeritStudent" value="@Model.MeritStudent" />
        <input type="hidden" asp-for="AppliedStudent" value="@Model.AppliedStudent" />
        <input type="hidden" asp-for="Subject" value="@Model.Subject" />
        @Html.AntiForgeryToken()

        <div class="form-group row">
            <label asp-for="MeritStudent" class="col-md-2 col-form-label text-md-right">Student</label>
            <div class="col-sm-10">
                <input type="hidden" asp-for="MeritStudent.Id" />
                <input readonly value="@Model.AppliedStudent.ApplicantName (@Model.MeritStudent.NUAdmissionRoll)" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Amount" class="col-md-2 col-form-label text-md-right"></label>
            <div class="col-sm-10">
                <input asp-for="Amount" class="form-control" placeholder="Deduction amount">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" value="Submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>
</div>