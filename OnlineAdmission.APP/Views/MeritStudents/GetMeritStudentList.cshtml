<div class="row card text-white bg-info mb-3">
    <div class="card-body">
        <form asp-action="GetMeritStudentList" asp-controller="MeritStudents" method="post" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="form-group row">
                    <label class="col-md-4 text-right">Select Student File (exl)</label>
                    <div class="col-md-2">
                        <input type="file" name="stuList" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2 offset-4">
                        <input class="btn btn-light" type="submit" value="Upload" /> 
                    </div>
                    <div class="col-md-6">
                        @if (ViewBag.msg!=null)
                        {
                        <span id="msgId" class="alert alert-danger h4">@ViewBag.msg</span>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#msgId').fadeOut(12000);
    });
</script>
}