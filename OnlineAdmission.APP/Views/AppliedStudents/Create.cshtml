@model OnlineAdmission.APP.ViewModels.AppliedStudents.AppliedStudentVM

@inject SignInManager<IdentityUser> _signInManager;

@{
    ViewData["Title"] = "Create";
    if (!_signInManager.IsSignedIn(User))
    {
        Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    }
 }

<h4>Student Apply Form (<span class="text-danger">Fill the form carefully as per your certificates since there is no scope for editing.</span>)</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="AppliedStudents" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="nuRoll" value="@ViewBag.nuRoll" />
            <div class="form-group">
                <label asp-for="NUAdmissionRoll" class="control-label"></label>
                <input readonly asp-for="NUAdmissionRoll" class="form-control" value="@ViewBag.nuRoll" />
                <span asp-validation-for="NUAdmissionRoll" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicantName" class="control-label"></label>
                <input asp-for="ApplicantName" class="form-control" />
                <span asp-validation-for="ApplicantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatherName" class="control-label"></label>
                <input asp-for="FatherName" class="form-control" />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotherName" class="control-label"></label>
                <input asp-for="MotherName" class="form-control" />
                <span asp-validation-for="MotherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label"></label>
                <input asp-for="MobileNo" class="form-control" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HSCGroup" class="control-label"></label>
                <select asp-for="HSCGroup" class="form-control">
                    <option selected disabled>Select Group</option>
                    <option value="SCIENCE">Science</option>
                    <option value="HUMANITIES">Humanities</option>
                    <option value="BUSINESS ADMINISTRATION">Business Administration</option>
                </select>
                <span asp-validation-for="HSCGroup" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @if (ViewBag.msg!=null)
                {
                    <span id="msgId" class="alert alert-danger">@ViewBag.msg</span>
                }
                
            </div>
        </form>
    </div>
</div>
@if (_signInManager.IsSignedIn(User))
{
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}

<br /><br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
        $('#msgId').fadeOut(10000);
    });
</script>
}
