@model IEnumerable<OnlineAdmission.Entity.Student>

@{
    ViewData["Title"] = "IdCard";
}

<h1>Id Card</h1>
<div class="row" id="pageTopArea">
    <div class="col-md-6 col-sm-12 col-xl-6">
        <button class="btn btn-info" onclick="window.print()"><i class="fa fa-print"></i> </button>
    </div>
    <div class="col-md-6 col-sm-12 col-xl-6">
        <form asp-action="IdCard">
            <div class="input-group mb-3">
                <select name="studentMeritType" type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <option selected disabled >Select Merit List</option>
                    <option value="1st Merit List">First Merit List</option>
                    <option value="2nd Merit List">Seconed Merit List</option>
                </select>
                <div class="input-group-append">
                    <button class="btn p-0" type="submit">
                        <span class="input-group-text" id="basic-addon2"> Search </span>
                    </button>
                    
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles{ 
    <link href="~/css/IDCard/IDCardStyle.css" rel="stylesheet" />
}
@if (Model != null)
{
<div class="row col-md-12">
    @foreach (var student in Model)
    {
        <div class="fullCard m-2" style="background-image: linear-gradient(to right, #3A6C91,#ffffff,#C1655E);">
            <div class="text-center part1">
                <img src="~/Images/Collge/Logo2.png" alt="Alternate Text" style="width:50px" /><br />
                <span class="h6">TEJGAON COLLEGE, DHAKA</span>
            </div>
            <div class="text-center  part2">
                <img class="card-img-top studentPhoto" src="~/Images/Students/@student.Photo" alt="Card image cap" style=" height:94.5px; width:75.6px;">
            </div>
            <div class="pl-4 part3">
                <table class="myTable">
                    <tr class="text-center">
                        <td colspan="3" class="studentName">@student.Name</td>

                    </tr>
                    <tr>
                        <td>Roll No</td>
                        <td>:</td>
                        <td>@student.CollegeRoll</td>
                    </tr>
                    <tr>
                        <td>Session</td>
                        <td>:</td>
                        <td>2020-2021</td>
                    </tr>
                    <tr>
                        <td>Cell</td>
                        <td>:</td>
                        <td>0@(student.StudentMobile)</td>
                    </tr>
                    <tr>
                        <td>Blood Group</td>
                        <td>:</td>
                        <td>@(student.BloodGroup)</td>
                    </tr>
                </table>
                <p>Department of @student.Subject.SubjectName</p>
            </div>
            <div class="text-right principalArea">
                <span class="sign"><img src="~/Images/Collge/sign.png" alt="Alternate Text" style="width:20%; color:white" /></span><br />
                <span class="principal">Principal</span>
            </div>
        </div>
        <div class="backpart m-2">
            <div class="jumbotron">
                Back part
            </div>
        </div>
    }

</div>

}

