    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#msgId').fadeOut(10000);
                $('#notifyId').fadeOut(10000);

                $('#paymentId').click(function () {
                    let isHidden = $('#bankingId').is(':hidden');
                    if (isHidden == true) {
                        $('#bankingId').show();
                    }
                    else {
                        $('#bankingId').hide();
                    }
                });
            });
        </script>
    }
